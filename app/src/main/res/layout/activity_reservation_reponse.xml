<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.campingimerir.ReservationReponseActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votre réservation est bien enregistré! Vous pouvez la retrouver dans l'onglet 'Reservation'"
        android:gravity="center"
        android:paddingTop="150dp"/>

    <Button
        android:id="@+id/btnRevenirRecherche"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Mes réservations"
        android:layout_gravity="center"/>

</LinearLayout>
